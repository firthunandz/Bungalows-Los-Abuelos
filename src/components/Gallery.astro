---
type GalleryItem = { src: string; alt: string };
const defaultImages: GalleryItem[] = [
  { src: "https://picsum.photos/seed/la1/800/600", alt: "Piscina junto a los bungalows" },
  { src: "https://picsum.photos/seed/la2/800/600", alt: "Parque arbolado" },
  { src: "https://picsum.photos/seed/la3/800/600", alt: "Interior del bungalow" },
  { src: "https://picsum.photos/seed/la4/800/600", alt: "Galería con hamacas" },
  { src: "https://picsum.photos/seed/la5/800/600", alt: "Asador y quincho" },
  { src: "https://picsum.photos/seed/la6/800/600", alt: "Atardecer en el predio" },
];

const {
  title = "Galería",
  linkHref = "/Galeria",
  images = defaultImages,
  limit,
} = Astro.props;

const displayed: GalleryItem[] = typeof limit === "number" ? images.slice(0, limit) : images;
---

<section aria-labelledby="gallery-heading" class="max-w-6xl mx-auto px-4">
  <header class="mb-4 flex items-baseline justify-between">
    <h2 id="gallery-heading" class="text-2xl font-semibold tracking-tight">
      <a href={linkHref} class="hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-600 rounded-sm">
        {title}
      </a>
    </h2>
  </header>

  <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {displayed.map((img, index) => (
      <li>
        <a href={img.src} data-index={index} class="block group" aria-label={`Ver ${img.alt}`}>
          <img src={img.src} alt={img.alt} loading="lazy" class="w-full h-48 object-cover rounded-md shadow-sm group-hover:opacity-90 transition-opacity" />
        </a>
      </li>
    ))}
  </ul>
</section>

