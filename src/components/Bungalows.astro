---
interface Bungalow {
  id: number;
  title: string;
  capacity: string;
  image: string;
  features: string[];
}

const bungalows: Bungalow[] = [
  {
    id: 1,
    title: "Bungalow 1",
    capacity: "De 2 a 4 personas",
    image: "https://placehold.co/600x400",
    features: [
      "Cocina equipada",
      "Baño completo",
      "WiFi",
      "Calefacción / A.A.",
      "Toallas / Sábanas",
      "Estacionamiento"
    ]
  },
  {
    id: 2,
    title: "Bungalow 2",
    capacity: "De 2 a 5 personas",
    image: "https://placehold.co/600x400",
    features: [
      "Cocina equipada",
      "Baño completo",
      "WiFi",
      "Calefacción / A.A.",
      "Toallas / Sábanas",
      "Estacionamiento"
    ]
  },
  {
    id: 3,
    title: "Bungalow 3",
    capacity: "De 2 a 6 personas",
    image: "https://placehold.co/600x400",
    features: [
      "Cocina equipada",
      "Baño completo",
      "WiFi",
      "Calefacción / A.A.",
      "Toallas / Sábanas",
      "Estacionamiento",
      "Parrilla"
    ]
  }
];
---

<section class="w-full bg-white py-12 px-4 md:py-20 lg:py-24">
  <div class="max-w-7xl mx-auto">
    
    <!-- Title -->
    <div class="mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-light leading-tight text-gray-900 text-center">
        Elegí tu bungalow
      </h2>
    </div>

    <!-- Bungalows Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
      
      {bungalows.map((bungalow) => (
        <div class="group bg-white border border-gray-200 overflow-hidden hover:shadow-xl transition-shadow duration-300">
          <!-- Image -->
          <div class="relative h-64 md:h-72 overflow-hidden bg-gray-200">
            <img 
              src={bungalow.image}
              alt={bungalow.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <!-- Capacity Badge -->
            <div class="absolute top-4 right-4 bg-white px-4 py-2 shadow-md">
              <span class="text-sm font-medium text-gray-900">{bungalow.capacity}</span>
            </div>
          </div>

          <!-- Content -->
          <div class="p-6 md:p-8">
            <h3 class="text-2xl md:text-3xl font-light text-gray-900 mb-6">
              {bungalow.title}
            </h3>

            <!-- Features List -->
            <ul class="space-y-3">
              {bungalow.features.map((feature) => (
                <li class="flex items-center gap-3 text-gray-700">
                  <svg class="w-5 h-5 text-[#4fb3b3] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>

            <!-- CTA Button -->
            <div class="mt-8">
              <button class="w-full border-2 border-gray-900 text-gray-900 px-6 py-3 text-sm font-medium tracking-wide uppercase hover:bg-gray-900 hover:text-white transition-colors duration-300">
                Ver más detalles
              </button>
            </div>
          </div>
        </div>
      ))}

    </div>
  </div>
</section>