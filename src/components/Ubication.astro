---
// Ubication.astro

// Coordenadas de Villa Elisa, Entre Ríos
const mapEmbedUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d422.22978903900287!2d-58.414255526755795!3d-32.15466168800374!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95b1d8327f17cfab%3A0xd3c88ed0a98b1937!2sDr.%20Guti%C3%A9rrez%202666!5e0!3m2!1ses!2sar!4v1759416206413!5m2!1ses!2sar";

// Información de contacto y ubicación
const locationInfo = {
  address: "Dr. Gutiérrez 2666 - Villa Elisa, Entre Ríos, Argentina",
  phone: "+54 9 3447 123456",
  email: "info@losabuelos.com",
  coordinates: {
    lat: -32.154631618316536,
    lng: -58.414226623653235
  }
};
---

<section class="w-full bg-white py-12 px-4 md:py-20 lg:py-24">
  <div class="max-w-7xl mx-auto">
    
    <!-- Title and Description -->
    <div class="mb-8 md:mb-12 text-center max-w-3xl mx-auto">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-light leading-tight text-gray-900 mb-4">
        Cómo llegar
      </h2>
      <p class="text-gray-700 text-base md:text-lg">
        Ubicados en Villa Elisa, Entre Ríos, a minutos de las mejores playas del río Paraná
      </p>
    </div>

    <!-- Map and Info Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-10">
      
      <!-- Map Container -->
      <div class="lg:col-span-2 order-2 lg:order-1">
        <div class="relative w-full h-[400px] md:h-[500px] lg:h-[600px] rounded-lg overflow-hidden shadow-lg border border-gray-200">
          <iframe
            src={mapEmbedUrl}
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Ubicación de Los Abuelos Bungalows"
            class="w-full h-full"
          ></iframe>
        </div>
      </div>

      <!-- Info Cards -->
      <div class="lg:col-span-1 order-1 lg:order-2 space-y-6">
        
        <!-- Address Card -->
        <div class="bg-[#f5f1ed] p-6 md:p-8 rounded-lg">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-[#4fb3b3]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-medium text-gray-900 mb-2">Dirección</h3>
              <p class="text-gray-700">{locationInfo.address}</p>
            </div>
          </div>
        </div>

        <!-- Phone Card -->
        <div class="bg-[#f5f1ed] p-6 md:p-8 rounded-lg">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-[#4fb3b3]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-medium text-gray-900 mb-2">Teléfono</h3>
              <a href={`tel:${locationInfo.phone}`} class="text-gray-700 hover:text-[#4fb3b3] transition-colors">
                {locationInfo.phone}
              </a>
            </div>
          </div>
        </div>

        <!-- Email Card -->
        <div class="bg-[#f5f1ed] p-6 md:p-8 rounded-lg">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-[#4fb3b3]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-medium text-gray-900 mb-2">Email</h3>
              <a href={`mailto:${locationInfo.email}`} class="text-gray-700 hover:text-[#4fb3b3] transition-colors break-all">
                {locationInfo.email}
              </a>
            </div>
          </div>
        </div>

        <!-- Directions Button -->
        <div class="pt-2">
          <a 
            href={`https://www.google.com/maps/dir//${locationInfo.coordinates.lat},${locationInfo.coordinates.lng}`}
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full text-center border-2 border-gray-900 text-gray-900 px-6 py-3 text-sm font-medium tracking-wide uppercase hover:bg-gray-900 hover:text-white transition-colors duration-300"
          >
            Abrir en Google Maps
          </a>
        </div>

      </div>

    </div>

  </div>
</section>